<div class="overlay-box has-opacity-75 is-flex is-hidden"
     data-target="poster.overlay quickview.overlay"
     data-action="click->quickview#show"
     data-movie-id="<%= movie.id %>">

     <div class="overlay-top-left">
       <button class="button is-small">+ Seen</button>
     </div>

     <div class="overlay-top-right">
       <button class="button is-small">+ Watchlist</button>
     </div>

     <div class="overlay-bottom-left">
       <button class="button is-small">Ratings</button>
     </div>

     <div class="overlay-bottom-right">
       <div class="button is-small is-rounded is-outlined is-link">Seen</div>
     </div>

     <%# Play Button %>
     <div class="is-centered has-text-centered has-text-weight-semibold is-hidden-mobile">
       <button class="button is-normal is-rounded is-link has-opacity-100 is-outlined"
               data-action="click->modal#show">
               <span class="icon">
                 <i class="fas fa-play"></i>
               </span>
       </button>
     </div>
</div>
