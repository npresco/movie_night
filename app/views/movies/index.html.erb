<section class="section">
  <div data-turbolinks-scroll=false>
    <div class="columns is-centered">
      <div class="column is-half">
        <%= form_with url: movies_path, method: :get, data: { "turbolinks-get-render" => true } do |form| %>
          <div class="field has-addons">
            <div class="control is-expanded">
              <%= form.text_field "query", class: "input is-normal",
                id: "index-search",
                autofocus: true,
                value: @query,
                onfocus: "this.setSelectionRange(this.value.length,this.value.length);",
                placeholder: "Search" %>
            </div>
            <div class="control">
              <%= form.submit "Search", class: "button" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <section class="section">
      <% if @movies.present? %>
        <div class="columns is-centered is-multiline">
          <%= render partial: @movies, locals: { redirect_path: movies_path } %>
        </div>
      <% elsif @no_result %>
        <div class="columns is-centered">
          <div class="column is-half">
            <div class="notification has-text-centered has-text-weight-semibold">
              <p>No results or too many, try a different search term</p>
            </div>
          </div>
        </div>
      <% end %>
    </section>
  </div>
</section>
