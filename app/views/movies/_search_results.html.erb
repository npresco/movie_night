<div class="column is-12">
  <div class="columns is-multiline is-centered is-mobile">
    <% if @movies.present? %>
      <%= render partial: @movies, locals: { show_badges: false } %>
    <% elsif @no_result %>
      <div class="box has-text-centered has-text-weight-semibold">
        <p>No results or too many, try a different search term</p>
      </div>
    <% end %>
  </div>
</div>
