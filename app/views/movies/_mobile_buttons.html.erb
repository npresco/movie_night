<div class="is-hidden-desktop">

  <div class="columns is-mobile is-centered">
    <div class="column is-narrow" data-movie-id="<%= @movie.id %>">
      <p class="is-size-6  has-text-weight-bold field">Trailer</p>
      <button class="button is-medium is-rounded is-link has-opacity-100 is-outlined"
        data-action="click->modal#show">
        <span class="icon">
          <i class="fas fa-play"></i>
        </span>
      </button>
    </div>

  </div>

  <%= render partial: "movies/mobile_add_remove_buttons", locals: { movie: @movie } %>

</div>
