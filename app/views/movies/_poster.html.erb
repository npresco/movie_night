<% if movie.poster %>
  <%= image_tag movie.poster,
    height: "300",
    width: "200",
    class: "poster",
    onerror: "this.onerror = null;this.src = '#{image_pack_tag('dark_movie_poster.jpeg')[/img.*?src="(.*?)"/i,1]}'" %>
<% else %>
  <%= image_pack_tag ("dark_movie_poster.jpeg"), height: "300", width: "200", class: "poster" %>
<% end %>
