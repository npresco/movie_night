<h1 class="title has-text-centered">Reset password</h1>

<div>
  <div>
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <%= hidden_field_tag :email, @user.email %>

      <div class="field">
        <div class="control">
          <%= f.label :password, class: "label" %>
          <%= f.password_field :password, class: "input" %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.label :password_confirmation, "Confirmation", class: "label" %>
          <%= f.password_field :password_confirmation, class: "input" %>
        </div>
      </div>

      <div class="field">
        <div class="control has-text-centered">
          <%= f.submit "Update password", class: "button is-link" %>
        </div>
      </div>
    <% end %>
  </div>
