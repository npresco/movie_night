<div class="column is-10 has-text-centered">
  <div class="columns is-multiline">
    <% @lists.each do |list| %>
      <div class="column is-4">
        <a href="<%= list_path(list) %>" class="box">
          <div class="field">
            <%= list.name %>
          </div>
          <figure class="image is-4by3">
            <%= image_pack_tag "#{list.name}.jpg" %>
          </figure>
        </a>
      </div>
    <% end %>
  </div>
</div>
