<!DOCTYPE html>
<html>
  <head>
    <title>MovieNight</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item">
          <span class="icon is-medium">
            <i class="fas fa-film"></i>
          </span>
          <span>Movie Night</span>
        </a>

        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="" class="navbar-menu">
        <div class="navbar-start">
          <% if current_user %>
            <a class="navbar-item">Calendar</a>
            <a class="navbar-item">Vote</a>
            <a class="navbar-item">My Movies</a>
          <% end %>
        </div>

        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
              <% if current_user %>
                <%= link_to "Account", "#", class: "button"%>
                <%= link_to 'Log Out', logout_path, method: :delete, class: "button" %>
              <% else %>
                <%= link_to "Log In", login_path, class: "button" %>
                <%= link_to "Sign Up", new_user_path, class: "button" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
