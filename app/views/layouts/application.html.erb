<!DOCTYPE html>
<html>
  <head>
    <title>MovieNight</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <a class="navbar-item" href="/">
            <span class="icon is-medium">
              <i class="fas fa-film"></i>
            </span>
            <span>Movie Night</span>
          </a>

          <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navMenu">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
          </a>
        </div>

        <div id="navMenu" class="navbar-menu">
          <div class="navbar-start">
            <% if current_user %>
              <% if current_club %>
                <% if current_club.current_poll %>
                  <%= link_to "Vote", poll_path(current_club.current_poll), class: "navbar-item" %>
                <% end %>
              <% end %>
              <%= link_to "Watchlist", watchlists_path, class: "navbar-item" %>
              <%= link_to "Movies", movies_path, class: "navbar-item" %>
            <% end %>
          </div>

          <div class="navbar-end">
            <% if current_user %>
              <div class="navbar-item">Welcome <%= current_user.name %></div>
              <% if current_club %>
                <div class="navbar-item has-dropdown is-hoverable">
                  <div class="navbar-link"><%= current_club.name %></div>
                  <div class="navbar-dropdown is-boxed">
                    <% current_user.clubs.each do |club| %>
                      <%= link_to club.name,
                        session_path(club_id: club.id),
                        method: :post,
                        class: "navbar-item" %>
                    <% end %>
                    <%= link_to "Manage Clubs", clubs_path, class: "navbar-item" %>
                  </div>
                </div>
              <% else %>
                <div class="navbar-item">
                  <%= link_to "Please Join or Create a Club", "/clubs", class: "button is-link" %>
                </div>
              <% end %>
            <% end %>
            <div class="navbar-item">
              <div class="buttons">
                <% if current_user %>
                  <%= link_to 'Log Out', logout_path, method: :delete, class: "button" %>
                <% else %>
                  <%= link_to "Log In", login_path, class: "button" %>
                  <%= link_to "Sign Up", new_user_path, class: "button" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
