<h1 class="title has-text-centered">Log In</h1>

<%= form_for :login do |f| %>
  <div class="field">
    <div class="control" has-text-centered>
      <%= f.label :email, class: "label" %>
      <%= f.text_field :email, class: "input", autofocus: true %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, class: "input" %>
    </div>
    <%= link_to "Forgot Password", new_password_reset_path, class: "help" %>
  </div>
  <div class="field">
    <div class="control has-text-centered">
      <%= f.submit "Sign in", class: "button is-link" %>
    </div>
  </div>
<% end %>

