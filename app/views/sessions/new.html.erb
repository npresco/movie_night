<section class="hero video is-fullheight-with-navbar">
  <div class="hero-video">
    <video poster="" id="" playsinline autoplay muted loop>
      <source src="/videos/hero.mkv" type="video/mkv">
    </video>
  </div>
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-one-quarter">
          <div class="box">
          <h1 class="title has-text-centered">Log In</h1>
            <%= form_for :login do |f| %>
              <div class="field">
                <div class="control" has-text-centered>
                  <%= f.label :email, class: "label" %>
                  <%= f.text_field :email, class: "input", autofocus: true %>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <%= f.label :password, class: "label" %>
                  <%= f.password_field :password, class: "input" %>
                </div>
              </div>
              <div class="field">
                <div class="control has-text-centered">
                  <%= f.submit "Sign in", class: "button is-link" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
