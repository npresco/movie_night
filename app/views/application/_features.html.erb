<% if @viewings %>
  <div class="column is-6-desktop is-12-mobile">
    <div class="timeline">
      <header class="timeline-header">
        <span class="tag is-medium is-link">Start</span>
      </header>


      <% @viewings.each do |viewing| %>

        <div class="timeline-item">
          <div class="timeline-marker is-icon">
            <i class="fa fa-film"></i>
          </div>
          <div class="timeline-content">
            <p class="heading">
              <%= viewing.datetime.to_formatted_s(:long_ordinal) %>
            </p>

            <p><%= viewing.movie.try(:title) %></p>
            <p class="is-size-7"><%= viewing.winning_nominator %></p>
          </div>
        </div>

      <% end %>

      <div class="timeline-header">
        <span class="tag is-medium is-link">End</span>
      </div>

    </div>
  </div>
<% end %>

<div class="column is-6-desktop is-12-mobile">
  <h3 class="is-size-5">
    Upcoming Features:
  </h3>
  <div class="content">
    <ol>
      <li> Calendar view with movie night and current movie shown </li>
      <li> Customize color scheme/icon </li>
      <li> Movie ranks per user are determined by movie head to head preference </li>
      <li> Ranked voting system </li>
      <li> Mobile app (Dart/Flutter) </li>
    </ol>
  </div>
</div>

